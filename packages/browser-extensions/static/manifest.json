{
  "name": "articles-summary",
  "description": "This program extract Wikipedia-like information from a browser page. Memory of Denis Diderot. The Contributor to the first encyclopedia.",
  "version": "0.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_title": "Denis Diderot"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
     "unlimitedStorage",
    "clipboardWrite",
    "idle",
    "activeTab",
    "webRequest",
    "notifications",
    "tabs"
  ],
  "web_accessible_resources": ["inpage.js"]
}
