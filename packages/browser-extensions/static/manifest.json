{
  "name": "articles-summary",
  "description": "This program extract Wikipedia-like information from a browser page. Memory of Denis Diderot. The Contributor to the first encyclopedia.",
  "version": "0.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_title": "Denis Diderot"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "idle",
    "activeTab",
    "webRequest",
    "notifications",
    "contentSettings",
    "tabs",
    "*://focus-student-254007.appspot.com/*",
    "*://us-central1-articles-summary-239.cloudfunctions.net/*",
    "*://*.wikipedia.org/*"
  ],
  "web_accessible_resources": ["inpage.js"],
  "content_security_policy": "script-src 'self' 'sha256-O3AtX4TwmY1zTH5o2WAKUOpepku7gzpyslNj5QedJmM=' 'sha256-rtczERVEr3MbsTMlnhn0HnQ2GdKENHD5JRCxFRh9GDI'; object-src 'self'"
}
