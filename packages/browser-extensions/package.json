{
  "name": "@reservoir-dogs/browser-extensions",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "start": "npm-run-all --parallel watch:*",
    "prepare-static": "cpy manifest.json dist && cpy src/assets/* dist/assets",
    "watch:static": "npm run prepare-static",
    "build:static": "npm run prepare-static",
    "build:contentscript-background": "NODE_ENV=production webpack --config webpack.config.js",
    "build:popup": "npm run build --prefix src/popup && cd src/popup/build && cpy * /static/* ../../../dist/popup --parents",
    "watch:contentscript-background": "NODE_ENV=development webpack --config webpack.config.js -w",
    "watch:popup": "npm run watch:build --prefix src/popup",
    "zip": "bestzip extension.zip dist/*"
  },
  "devDependencies": {
    "@types/chrome": "0.0.88",
    "@types/node": "^12.7.5",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^8.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.9",
    "npm-run-all": "^4.1.5",
    "cpy-cli": "^2.0.0",
    "bestzip": "^2.1.4"
  },
  "author": "",
  "license": "ISC",
  "private": true
}
