{
  "name": "@reservoir-dogs/browser-extensions",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "postinstall": "cd src/popup && yarn",
    "build": "npm-run-all --parallel build:*",
    "start": "npm-run-all --parallel watch:*",
    "lint": "npx tsc --noEmit -p tsconfig.json && npx eslint './src/**/*.ts'",
    "prepare-static": "cpy static/manifest.json dist",
    "watch:static": "yarn run prepare-static",
    "build:static": "yarn run prepare-static",
    "build:contentscript-background": "NODE_ENV=production webpack --config webpack.config.js",
    "build:popup": "cd src/popup && yarn run build && cd build && cpy * /static/* ../../../dist/popup --parents",
    "watch:contentscript-background": "NODE_ENV=development webpack --config webpack.config.js -w",
    "watch:popup": "cd src/popup && yarn run watch:build",
    "zip": "bestzip extension.zip dist/*"
  },
  "devDependencies": {
    "@reservoir-dogs/build": "1.0.0",
    "@types/node": "^12.7.5",
    "@types/html-to-text": "^1.4.31",
    "@types/mark.js": "^8.11.4",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "@types/chrome" : "^0.0.89",
    "awesome-typescript-loader": "^5.2.1",
    "bestzip": "^2.1.4",
    "cpy-cli": "^2.0.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.4.0",
    "typescript": "^3.6.3",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-import": "^2.18.2",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "sass-loader": "^8.0.0",
    "tslint": "^5.20.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "html-to-text": "^5.1.1",
    "mark.js": "^8.11.1",
    "jquery": "^3.4.1"
  },
  "author": "",
  "license": "ISC",
  "private": true
}
